<h1> <%= @post.title %></h1>

<%= @post.text %>

<h2>Comments</h2>

<% @post.comments.each do |comment| %>
<p><%= comment.text %></P>
	<p><%= time_ago_in_words comment.created_at %> ago </p>
	<p><%= link_to "删除回复", [@post, comment], :method => :delete, :confirm => "确定删除吗？"%></p>
<% end %>

<%= form_for [@post,@post.comments.build] do |f| %>
<p><%= f.text_area :text, :size => '40x10' %> </p>
<p><%= f.submit "Post Comment" %> </p>
<% end %>

<p>
	<%= link_to "退后", posts_path %>
	|
	<%= link_to "编辑", edit_post_path(@post) %>
	|
	<%= link_to "删除", @post,:method => :delete, :confirm =>"确定删除吗?" %>
</p>